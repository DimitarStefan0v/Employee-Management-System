@using EMS.Web.ViewModels.Employees;
@model EmployeesListViewModel

@{
    this.ViewData["Title"] = "All employees";
}

<section class="employees-wrapper">
    @foreach (var employee in Model.Employees)
    {
        <article class="single-employee-wrapper">
            <i class="fas fa-user"></i>
            <ul>
                <li><p class="single-employee-wrapper-fullname">Names: <strong>@(employee.FirstName + " " + employee.LastName)</strong></p></li>
                <li><p class="single-employee-wrapper-email">Email: <strong>@employee.Email</strong></p></li>
                <li><p class="single-employee-wrapper-phone">Phone Number: <strong>@employee.PhoneNumber</strong></p></li>
                <li><p class="single-employee-wrapper-birthday">Birthday: <strong>@employee.DateOfBirth.ToString("dddd, dd MMMM yyyy")</strong></p></li>
                <li><p class="single-employee-wrapper-salary">Monthly Salary: <strong>@(Math.Round(employee.MonthlySalary, 2))</strong></p></li>
                <li><p class="single-employee-wrapper-addedBy">Added by: <strong>@(employee.AddedByUserUserName == null ? "Guest User" : employee.AddedByUserUserName)</strong></p></li>
            </ul>
        </article>
    }
</section>